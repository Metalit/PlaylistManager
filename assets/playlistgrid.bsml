<bg xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/RedBrumbler/Quest-BSML-Docs/gh-pages/schema.xsd">
    <scrollable-container id="scroller" mask-overflow="false" anchor-pos-y="-5">
        <grid id="grid" cell-size-x="14" cell-size-y="14" spacing-x="1" spacing-y="1">
            <horizontal id="addCell" pref-width="14" pref-height="14" child-align="UpperLeft" child-control-width="false" child-control-height="false">
                <action-button text="+" hover-hint="Create new playlist" pref-width="-1" on-click="addClicked" italics="false"/>
            </horizontal>
            <horizontal id="fakeCell" pref-width="14" pref-height="14" active="false"/>
        </grid>
    </scrollable-container>
</bg>
