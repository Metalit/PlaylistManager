{
  "$schema": "https://raw.githubusercontent.com/QuestPackageManager/QPM.Package/refs/heads/main/qpm.schema.json",
  "version": "0.1.0",
  "sharedDir": "shared",
  "dependenciesDir": "extern",
  "info": {
    "name": "PlaylistManager",
    "id": "playlistmanager",
    "version": "1.4.0",
    "url": "https://github.com/Metalit/PlaylistManager",
    "additionalData": {
      "overrideSoName": "libplaylistmanager.so",
      "cmake": true
    }
  },
  "workspace": {
    "scripts": {
      "bsml": [
        "pwsh ./scripts/push-bsml.ps1 $0?"
      ],
      "build": [
        "pwsh ./scripts/build.ps1 $0?"
      ],
      "copy": [
        "pwsh ./scripts/copy.ps1 $0:?",
        "pwsh ./scripts/restart-game.ps1"
      ],
      "log": [
        "pwsh ./scripts/start-logging.ps1 $0:"
      ],
      "qmod": [
        "pwsh ./scripts/build.ps1 $0?",
        "pwsh ./scripts/createqmod.ps1"
      ],
      "restart": [
        "pwsh ./scripts/restart-game.ps1"
      ],
      "stack": [
        "pwsh ./scripts/ndk-stack.ps1 $0?"
      ],
      "tomb": [
        "pwsh ./scripts/pull-tombstone.ps1 -analyze"
      ]
    },
    "qmodIncludeDirs": [
      "build",
      "extern/libs"
    ],
    "qmodIncludeFiles": [],
    "qmodOutput": null
  },
  "dependencies": [
    {
      "id": "beatsaber-hook",
      "versionRange": "^6.4.2",
      "additionalData": {}
    },
    {
      "id": "beatsaverplusplus",
      "versionRange": "^0.2.1",
      "additionalData": {}
    },
    {
      "id": "bs-cordl",
      "versionRange": "4005.*",
      "additionalData": {}
    },
    {
      "id": "bsml",
      "versionRange": "^0.4.52",
      "additionalData": {}
    },
    {
      "id": "config-utils",
      "versionRange": "^2.0.3",
      "additionalData": {}
    },
    {
      "id": "custom-types",
      "versionRange": "^0.18.2",
      "additionalData": {}
    },
    {
      "id": "metacore",
      "versionRange": "^1.2.2",
      "additionalData": {}
    },
    {
      "id": "paper2_scotland2",
      "versionRange": "^4.6.1",
      "additionalData": {}
    },
    {
      "id": "playlistcore",
      "versionRange": "^1.5.1",
      "additionalData": {}
    },
    {
      "id": "scotland2",
      "versionRange": "^0.1.6",
      "additionalData": {
        "includeQmod": false
      }
    },
    {
      "id": "songcore",
      "versionRange": "^1.1.21",
      "additionalData": {}
    },
    {
      "id": "web-utils",
      "versionRange": "^0.6.7",
      "additionalData": {}
    }
  ]
}
